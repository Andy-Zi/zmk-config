#include <behaviors.dtsi>
#include <dt-bindings/zmk/keys.h>
#include <dt-bindings/zmk/bt.h>

#define DEFAULT 0
#define LOWER   1
#define RAISE   2
#define ADJUST  3

/ {
    keymap {
        compatible = "zmk,keymap";

        default_layer {
            bindings = <
  //,-----------------------------------------------------------------------------------------------------------.                                      ,-----------------------------------------------------------------------------------------------------------.
     &kp TAB           &kp Q             &kp W             &kp E             &kp R             &kp T                                                    &kp Y             &kp U             &kp I             &kp O             &kp P             &kp ESC
  //|-----------------+-----------------+-----------------+-----------------+-----------------+-----------------|                                      |-----------------+-----------------+-----------------+-----------------+-----------------+-----------------|
     &kp LALT          &kp A             &kp S             &kp D             &kp F             &kp G                                                    &kp H             &kp J             &kp K             &kp L             &kp SEMI          &kp SQT
  //|-----------------+-----------------+-----------------+-----------------+-----------------+-----------------|                                      |-----------------+-----------------+-----------------+-----------------+-----------------+-----------------|
     &kp LGUI          &mt LSHFT Z       &mt LCTRL X       &mt LGUI C        &mt LALT V        &kp B                                                    &kp N             &mt RALT M        &mt RGUI COMMA    &mt RCTRL DOT     &mt RSHFT FSLH    &kp RSFT
  //|-----------------+-----------------+-----------------+-----------------+-----------------+-----------------+-----------------|  |-----------------+-----------------+-----------------+-----------------+-----------------+-----------------+-----------------|
                                                                             &kp LCRTL         &mo LOWER         &kp SPACE            &kp ENTER         &mo RAISE         &kp RAL
                                                                          //`-----------------------------------------------------'  `-----------------------------------------------------'
            >;
        };

        lower_layer {
            bindings = <
  //,-----------------------------------------------------------------------------------------------------------.                                      ,-----------------------------------------------------------------------------------------------------------.
     &kp TILDE         &kp EXCL          &kp AT            &kp HASH          &kp DLLR          &kp PRCNT                                                &kp CIRC          &kp AMPS          &kp ASTRK         &kp LPAR          &kp RPAR          &kp PIPE
  //|-----------------+-----------------+-----------------+-----------------+-----------------+-----------------|                                      |-----------------+-----------------+-----------------+-----------------+-----------------+-----------------|
     &kp GRAVE         &kp N1            &kp N2             &kp N3            &kp N4            &kp N5                                                   &kp N6            &kp N7            &kp N8            &kp N9            &kp N0            &kp BSLH
  //|-----------------+-----------------+-----------------+-----------------+-----------------+-----------------|                                      |-----------------+-----------------+-----------------+-----------------+-----------------+-----------------|
     &trans            &kp LSHFT         &mt LCTRL UNDER   &mt LGUI MINUS    &mt LALT LBKT     &kp LCBR                                                 &kp RCBR          &mt RALT RBKT     &mt RGUI PLUS     &mt RCTRL EQUAL   &kp RSFT          &trans
  //|-----------------+-----------------+-----------------+-----------------+-----------------+-----------------+-----------------|  |-----------------+-----------------+-----------------+-----------------+-----------------+-----------------+-----------------|
                                                                             &trans            &trans            &kp SPACE            &kp ENTER         &mo ADJUST        &trans
                                                                          //`-----------------------------------------------------'  `-----------------------------------------------------'
            >;
        };

        raise_layer {
            bindings = <
  //,-----------------------------------------------------------------------------------------------------------.                                      ,-----------------------------------------------------------------------------------------------------------.
     &trans            &trans            &trans            &trans            &trans            &kp DEL                                                  &kp BSPC          &trans            &trans            &trans            &trans            &trans
  //|-----------------+-----------------+-----------------+-----------------+-----------------+-----------------|                                      |-----------------+-----------------+-----------------+-----------------+-----------------+-----------------|
     &kp LALT          &trans            &kp HOME          &kp PGUP          &kp PGDN          &kp END                                                  &kp LEFT          &kp DOWN          &kp UP            &kp RIGHT         &trans            &trans
  //|-----------------+-----------------+-----------------+-----------------+-----------------+-----------------|                                      |-----------------+-----------------+-----------------+-----------------+-----------------+-----------------|
     &kp LGUI          &kp BTN1          &kp WH_L          &kp WH_U          &kp WH_D          &kp WH_R                                                 &kp MS_L          &kp MS_D          &kp MS_U          &kp MS_R          &kp BTN2          &trans
  //|-----------------+-----------------+-----------------+-----------------+-----------------+-----------------+-----------------|  |-----------------+-----------------+-----------------+-----------------+-----------------+-----------------+-----------------|
                                                                             &trans            &mo ADJUST        &kp SPACE            &kp ENTER         &trans            &trans
                                                                          //`-----------------------------------------------------'  `-----------------------------------------------------'
            >;
        };

        adjust_layer {
            bindings = <
  //,-----------------------------------------------------------------------------------------------------------.                                      ,-----------------------------------------------------------------------------------------------------------.
     &trans            &trans            &trans            &trans            &trans            &kp PSCR                                                 &kp MPRV          &kp MPLY          &kp MUTE          &kp MNXT          &trans            &trans
  //|-----------------+-----------------+-----------------+-----------------+-----------------+-----------------|                                      |-----------------+-----------------+-----------------+-----------------+-----------------+-----------------|
     &kp F12           &kp F1            &kp F2            &kp F3            &kp F4            &kp F5                                                   &kp F6            &kp F7            &kp F8            &kp F9            &kp F10           &kp F11
  //|-----------------+-----------------+-----------------+-----------------+-----------------+-----------------|                                      |-----------------+-----------------+-----------------+-----------------+-----------------+-----------------|
     &trans            &kp LSHFT         &kp LCTRL         &kp LGUI          &kp LALT          &trans                                                   &trans            &kp RALT          &kp RGUI          &kp RCTRL         &kp RSFT          &trans
  //|-----------------+-----------------+-----------------+-----------------+-----------------+-----------------+-----------------|  |-----------------+-----------------+-----------------+-----------------+-----------------+-----------------+-----------------|
                                                                             &trans            &trans            &kp SPACE            &kp ENTER          &trans            &trans
                                                                          //`-----------------------------------------------------'  `-----------------------------------------------------'
            >;
        };
    };
};
